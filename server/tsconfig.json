{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "dist",
    "esModuleInterop": true,
    "strict": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "paths": {
      "@shared/*": ["../shared/*"],
      "@/*": ["./*"],
    }
  },
  "include": [
	  "server.ts", 
	  "routes/**/*.ts", 
	  "**/*.ts", 
    "**/*.d.ts"
  ],
}
